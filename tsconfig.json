{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "dist",
    "lib": ["es5", "es6"],
    "moduleResolution": "node",
    "skipLibCheck": true
  },
  "include": ["src", "migrations"],
  "exclude": ["node_modules", "dist"]
}
